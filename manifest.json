{
  "manifest_version": 3,
  "name": "Ministry of Health",
  "version": "1.9",
  "description": "Automates actions for the Ministry of Health website",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "icons": {
    "16": "/icon/MOHlogo.png",
    "48": "/icon/MOHlogo.png",
    "128": "/icon/MOHlogo.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "/icon/MOHlogo.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "<all_urls>", // يسمح للامتداد بالوصول إلى جميع الروابط
    "https://www.purchasingprogramsaudi.com/*" // يحدد الموقع المطلوب
  ],
  "content_scripts": [
    {
      "matches": ["https://www.purchasingprogramsaudi.com/*"], // يحدد المواقع لـ content.js
      "js": ["content.js"],
      "run_at": "document_end" // يمكنك تحديد وقت التشغيل حسب الحاجة
    }
  ]
}
